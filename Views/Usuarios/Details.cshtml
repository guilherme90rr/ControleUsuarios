<br />
<div>
    <a class="btn btn-secondary" role="button" asp-action="Edit" asp-route-id="@Model?.idUsuario">Editar</a> |
    <a class="btn btn-warning" role="button" asp-action="Index">Voltar a Lista</a>
</div>
