@model CRUDLogin.Models.Usuario

@{
    ViewData["Title"] = "Create";
}

<h1 class="display-6">Criar usuário</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="empresaId" class="control-label"></label>
                <select asp-for="empresaId" class ="form-control" asp-items="ViewBag.empresaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="nomeUsuario" class="control-label"></label>
                <input asp-for="nomeUsuario" class="form-control" />
                <span asp-validation-for="nomeUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="senha" class="control-label"></label>
                <input asp-for="senha" class="form-control" />
                <span asp-validation-for="senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="documentoUsuario" class="control-label"></label>
                <input asp-for="documentoUsuario" class="form-control" />
                <span asp-validation-for="documentoUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dataCriacao" class="control-label"></label>
                <input asp-for="dataCriacao" class="form-control" />
                <span asp-validation-for="dataCriacao" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" /> |
                <a class="btn btn-warning" asp-action="Index">Voltar a Lista</a>
            </div>
            <br />
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
